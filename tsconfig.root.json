{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6"
    ]
  },
  "exclude": [
    "**/node_modules/**",
    "**/*.spec.ts"
  ],
  "paths": {
    "@meanstackproject/*": ["./packages/*/src"]
  }
}
